---
import Container from "./containers/Container.astro";
import ImagesCarousel from "./conocenos-mas/ImagesCarousel";
import { fetchDestacados } from "@/utils/fetchDestacados";
import Title from "./Title.astro";
const destacados = await fetchDestacados();
---

<Container>
    <Title
        title="Conocenos más"
        subtitle="Acá tenés nuestras fotos destacadas.Explorá algunos momentos únicos y dejate inspirar"
        imageUrl="./images/conocenosMas.png"
    />
    <ImagesCarousel
        images={destacados.map((destacado) => ({
            href: destacado.link,
            imageUrl: destacado.image.url,
            title: destacado.title,
        }))}
        client:load
    />
</Container>
