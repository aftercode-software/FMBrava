---
const { event } = Astro.props;

const date = new Date(event.dia);
const day = date.getDate();
const month = date.toLocaleDateString("es-AR", { month: "long" });
---

<div
    class="relative h-full bg-cover bg-center text-white flex flex-col justify-end p-6 rounded-[8px_8px_76px_8px]"
    style={`background-image: url('${event.imagen.url}')`}
>
    <div class="flex justify-between items-end w-full">
        <div class="text-left max-w-[60%]">
            <h3 class="text-[36px] font-bold leading-tight">
                {event.nombre}
            </h3>
        </div>
        <div class="text-right">
            <p
                class="font-medium font-inter uppercase tracking-wider text-[28px]"
            >
                {month}
            </p>
            <p
                class="text-5xl font-extrabold font-inter leading-none text-[128px]"
            >
                {day}
            </p>
        </div>
    </div>
</div>
