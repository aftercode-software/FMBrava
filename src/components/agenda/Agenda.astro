---
import { fetchAgenda } from "@/utils/fetchAgenda";

import ViewAllButton from "../ViewAllButton.astro";
import EventCard from "./EventCard.astro";
import FeaturedEvent from "./FeaturedEvent.astro";
import Container from "../containers/Container.astro";

const events = await fetchAgenda();
if (!events || events.length === 0) throw new Error("No events found");

const [featured, ...rest] = events;
---

<Container class="py-10 md:py-16 px-4">
    <div class="flex items-center mb-6">
        <div>
            <img
                src="../../../public/images/agenda.png"
                alt="Agenda"
                class="w-24 md:w-32 mb-2"
            />
        </div>
        <div>
            <h2
                class="text-[32px] font-inter font-bold text-white tracking-wider"
            >
                Proximamente
            </h2>
            <p class="text-[20px] font-normal font-ibm text-white/60">
                Consultá nuestros próximos estrenos
            </p>
        </div>
    </div>

    <section class="relative h-full md:h-[55vh]">
        <div class="flex flex-col md:flex-row h-full w-full gap-y-10 md:gap-6">
            <div class="md:w-[30%] md:h-full w-full h-[400px]">
                <FeaturedEvent event={featured} />
            </div>
            <div
                class="w-full md:flex-1 grid grid-cols-2 grid-rows-2 gap-x-4 gap-y-10 md:gap-y-10 h-[300px] md:h-full"
            >
                {
                    rest.map((event) => (
                        <EventCard key={event.id} event={event} />
                    ))
                }
            </div>
        </div>
    </section>
</Container>
