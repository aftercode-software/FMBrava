---
const { event } = Astro.props;
const date = new Date(event.dia);
const day = date.getDate();
const month = date.toLocaleDateString("es-AR", { month: "long" });
---

<div class="flex items-center gap-[4px] md:h-full w-full text-white/40">
    <div class="md:w-[50%] w-[50%] flex flex-col justify-center text-right">
        <p class="text-base md:text-3xl font-inter capitalize">
            {month}
        </p>
        <p class="text-6xl md:text-9xl font-extrabold tracking-tighter">
            {day}
        </p>
    </div>

    <div class="md:w-[50%] w-[50%] flex-1 h-full md:h-full overflow-hidden">
        <img
            src={event.imagen.url}
            alt={event.imagen.alt}
            class="w-[100%] md:w-[82%] h-[80%] md:h-full object-cover md:rounded-[8px_8px_76px_8px] rounded-[8px_8px_36px_8px] border-1 border-[#4d4d4d]"
        />
    </div>
</div>
