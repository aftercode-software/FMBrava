---
type Props = {
    className?: string;
    title: string;
    subtitle: string;
    imageUrl: string;
};

const { title, subtitle, imageUrl, className } = Astro.props;
---

<div class={`flex items-center mb-6 ${className}`}>
    <div>
        <img src={imageUrl} alt={title} class="w-28 h-28" />
    </div>
    <div>
        <h2 class="text-[32px] font-inter font-bold text-white tracking-wider">
            {title}
        </h2>
        <p
            class="text-[20px]
            font-medium
            md:text-lg
            font-ibm
            text-gray-400
            max-w-1
            2"
        >
            {subtitle}
        </p>
    </div>

    <slot />
</div>
