---
import { Facebook, Instagram } from "@lucide/astro";
import Container from "./containers/Container.astro";
import SomosMasAnimacion from "./SomosMasAnimacion";

const isHome = Astro.url.pathname === "/";
---

<footer
  class={`flex flex-col items-center w-full bg-negro-900 ${isHome ? "mb-26 lg:my-26" : ""} `}
>
  <div class="relative w-full flex justify-center pt-12">
    <div class="w-full flex justify-center">
      <SomosMasAnimacion client:idle />
    </div>

    <div
      class="absolute top-[62%] md:top-1/2 left-1/2 flex flex-col items-center w-full"
      style="transform: translate(-50%, -50%);"
    >
      <img src="/somos.svg" alt="Somos" class="h-10 lg:h-20 mx-auto" />
      <p
        class="font-tusker text-amarillo text-xl lg:text-5xl tracking-wide md:mt-2 text-center"
      >
        más
      </p>
    </div>
  </div>
  <div class="bg-amarillo w-full py-4 md:py-6 z-10 text-negro">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
        {/* Navigation Links */}
        <nav
          class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-6 text-center md:text-left"
        >
          <a
            href="/programacion"
            class="font-ibm text-lg text-negro-900 hover:font-semibold transition-all"
          >
            Programación
          </a>
          <a
            href="/agenda"
            class="font-ibm text-lg text-negro-900 hover:font-semibold transition-all"
          >
            Agenda
          </a>
          <a
            href="/brava-news"
            class="font-ibm text-lg text-negro-900 hover:font-semibold transition-all"
          >
            Brava News
          </a>
        </nav>

        {/* Social Media - Center */}
        <div class="flex justify-center space-x-4">
          <a
            href="#"
            class="w-10 h-10 bg-black/10 hover:bg-black/20 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-105"
            aria-label="Instagram"
          >
            <Instagram class="w-5 h-5 text-black" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-black/10 hover:bg-black/20 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-105"
            aria-label="Facebook"
          >
            <Facebook class="w-5 h-5 text-black" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-black/10 hover:bg-black/20 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-105"
            aria-label="TikTok"
          >
            <Facebook />
          </a>
        </div>

        {/* Copyright */}
        <div class="text-center md:text-right">
          <p class="font-ibm text-lg text-negro-900">© 2025 Brava</p>
        </div>
      </div>

      {/* Divider */}
      <div class="border-t border-black/10 mt-6 pt-6">
        <div
          class="flex flex-col md:flex-row justify-between items-center space-y-2 md:space-y-0"
        >
          <p class="text-base text-center md:text-left font-ibm text-negro">
            Orgullosamente diseñado y desarrollado por {" "}
            <a
              href="https://www.aftercode.dev"
              target="_blank"
              class="font-medium text-[#F30C70] transition-colors duration-200"
            >
              Aftercode
            </a>
          </p>
          <p class="text-base font-ibm text-negro">
            Todos los derechos reservados
          </p>
        </div>
      </div>
    </Container>
  </div>
</footer>
