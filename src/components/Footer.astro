---
import Container from "./containers/Container.astro";
import SomosMasFooter from "./SomosMasFooter";
---

<footer class="flex flex-col items-center w-full bg-negro-900 mb-20 lg:my-20">
  <div class="relative w-full flex justify-center pt-12">
    <div class="w-full flex justify-center">
      <SomosMasFooter client:idle />
    </div>

    <div
      class="absolute top-[50%] left-1/2 flex flex-col items-center w-full"
      style="transform: translate(-50%, -50%);"
    >
      <img src="/somos.svg" alt="Somos" class="h-6 lg:h-20 mx-auto" />
      <p
        class="font-tusker text-amarillo text-lg lg:text-5xl tracking-wide mt-2 text-center"
      >
        más
      </p>
    </div>
  </div>
  <section class="bg-amarillo w-full py-4 z-10">
    <Container
      class="flex flex-col lg:flex-row justify-between items-left w-full px-4"
    >
      <div class="flex">
        <p class="font-ibm text-negro-900 text-sm lg:text-lg">
          <b class="font-medium md:font-semibold"
            >Copyright ©{new Date().getFullYear()} Brava</b
          >
        </p>
      </div>
      <div class="flex space-x-8 md:flex-row flex-col gap-2 mt-4 md:mt-0">
        <a
          href="/programas"
          class="font-ibm text-lg text-negro-900 hover:font-semibold transition-all"
          >Programas</a
        >
        <a
          href="/agenda"
          class="font-ibm text-lg text-negro-90 hover:font-semibold transition-all"
          >Agenda</a
        >
        <a
          href="/brava-news"
          class="font-ibm text-lg text-negro-90 hover:font-semibold transition-all"
          >Brava News</a
        >
      </div>
    </Container>
  </section>

  <p class="text-white font-ibm py-8 font">
    Orgullosamente diseñado y desarrollado por <b class="text-[#F30C70]"
      >Aftercode</b
    >.
  </p>
</footer>
