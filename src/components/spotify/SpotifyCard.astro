---
import { ExternalLink } from "@lucide/astro";

type Props = {
  imageUrl: string;
  title: string;
  link: string;
};

const { imageUrl, title, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="group block relative w-full aspect-square rounded-sm overflow-hidden border-2 border-[#8B8B8B] max-h-[40vh]"
>
  <img
    src={imageUrl}
    alt={title}
    class="w-full h-full object-cover absolute top-0 left-0 transition-all duration-150 ease-in-out"
  />
  <div
    class="absolute top-0 right-0 bg-black/80 backdrop-blur p-3 rounded-bl-2xl transition-all duration-150 ease-in-out"
  >
    <ExternalLink class="text-white" />
  </div>

  <p
    class="absolute top-[45%] left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 text-white opacity-0 group-hover:opacity-100 text-4xl lg:text-5xl group-hover:block transition-all duration-150 text-center uppercase"
  >
    {title}
  </p>

  <div
    class="absolute bottom-0 left-0 w-full bg-black/80 group-hover:h-full backdrop-blur py-3 px-4 ease-in-out"
  >
    <span
      class="text-white font-medium text-lg font-ibm uppercase group-hover:tracking-wide group-hover:font-tusker ease-in-out group-hover:opacity-0"
      >{title}</span
    >
    <ExternalLink
      class="text-white hidden group-hover:block ease-in-out group-hover:opacity-0"
    />
  </div>
</a>
