---
import { SITE } from "@/config/seo";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string[];
  pathname?: string;
  type?: "website" | "article";
  date?: string; // para artÃ­culos con fecha
  author?: string;
}

const {
  title,
  description,
  image,
  keywords,
  pathname,
  type = "website",
  date,
  author,
} = Astro.props as Props;

const seo = {
  title: title ? `${title} | ${SITE.title}` : SITE.title,
  description: description ?? SITE.description,
  url: new URL(pathname ?? Astro.url.pathname, SITE.url).href,
  image: new URL(image ?? SITE.defaultImage, SITE.url).href,
  keywords: (keywords && keywords.length > 0 ? keywords : SITE.keywords).join(
    ", "
  ),
};
---

<astro:head>
  <title>{seo.title}</title>
  <meta name="description" content={seo.description} />
  <meta name="keywords" content={seo.keywords} />
  <link rel="canonical" href={seo.url} />

  <meta property="og:locale" content={SITE.locale} />
  <meta property="og:site_name" content={SITE.title} />
  <meta property="og:type" content={type} />
  <meta property="og:title" content={seo.title} />
  <meta property="og:description" content={seo.description} />
  <meta property="og:url" content={seo.url} />
  <meta property="og:image" content={seo.image} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={seo.title} />
  <meta name="twitter:description" content={seo.description} />
  <meta name="twitter:image" content={seo.image} />

  {date && <meta property="article:published_time" content={date} />}
  {author && <meta name="author" content={author} />}
</astro:head>
