---
import { fetchBlogs } from "@/utils/fetchBlogs";
import Container from "../containers/Container.astro";
import Title from "../Title.astro";
import BravaNewsCarousel from "./BravaNews.tsx";

const blogs = await fetchBlogs();
if (!blogs.length) return null;
---
<Container class="w-full mt-26 sm:mt-16">
    <Title
    title="Brava News"
    subtitle="Noticias de mÃºsica, entretenimiento y cultura pop en Mendoza, con el sello Brava."
    imageUrl="/sections-icons/brava-news-icon.webp"
    cantidad={blogs.length}
    link="/brava-news"
    verTodasTexto="todas"
  />
  <BravaNewsCarousel blogs={blogs} client:only="react" />
</Container>