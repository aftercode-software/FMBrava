---
import { Plus } from "@lucide/astro";
import Button from "../Button.astro";

type Props = {
  socialLink: string;
  socialHandle: string;
  socialName: string;
  socialImageUrl: string;
  socialBrandImageUrl: string;
};

const {
  socialLink,
  socialHandle,
  socialName,
  socialImageUrl,
  socialBrandImageUrl,
} = Astro.props;
---

<div
  class="flex items-start md:items-center flex-col-reverse md:flex-row my-8 gap-6"
>
  <div class="flex items-center w-full justify-between md:justify-start gap-12">
    <div class="flex items-center gap-4">
      <img
        src={socialImageUrl}
        alt="logo"
        class="h-14 w-14 object-contain rounded-full"
      />
      <div class="flex flex-col h-full text-white *:font-ibm">
        <span class="text-sm md:text-xl font-regular">{socialHandle}</span>
        <span class="text-sm font-bold md:text-xl">{socialName}</span>
      </div>
    </div>
    <Button href={socialLink} variant="light" size="sm">
      Seguinos <Plus />
    </Button>
  </div>
</div>
