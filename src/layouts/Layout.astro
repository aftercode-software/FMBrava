---
import "../assets/base.css";
import { SITE } from "@/config/seo";
import Navbar from "@/components/navbar/Navbar";
import Footer from "@/components/Footer.astro";
import SplashVideo from "@/components/SplashVideo";
import { AstroFont } from "astro-font";
import { join } from "node:path";
import PlayerNav from "@/components/home/PlayerNav.astro";

export const revalidate = 3600;
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=300, stale-while-revalidate=3600"
);
interface Props {
  title?: string;
  description?: string;
  image?: string;
  pathname?: string;
}

const {
  title = SITE.title,
  description = SITE.description,
  image = SITE.defaultImage,
  pathname,
} = Astro.props as Props;

const pageUrl = new URL(pathname ?? "/", SITE.url).href;
const imageUrl = new URL(image, SITE.url).href;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon/favicon.ico" />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <AstroFont
      config={[
        {
          src: [],
          name: "Inter",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
        {
          src: [],
          name: "IBM Plex Sans",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100..700;1,100..700&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
        {
          name: "Tusker Grotesk",
          src: [
            {
              style: "normal",
              weight: "900",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "tusker-grotesk.ttf"
              ),
            },
          ],
          preload: false,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />
    <link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <link rel="canonical" href={pageUrl} />
  </head>
  <body class="bg-negro-900">
    <SplashVideo client:only="react" />
    <Navbar client:only="react" />
    <slot />
    <Footer />
  </body>
</html>
