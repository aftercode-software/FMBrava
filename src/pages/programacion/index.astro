---
import { fetchProgramas } from "../../utils/fetchProgramas";
import Container from "@/components/containers/Container.astro";
import Layout from "@/layouts/Layout.astro";
import ProgramasHero from "@/components/Programas/Hero";

const programas = await fetchProgramas();
---

<Layout
  title="Programación"
  description="Descubre nuestra programación diaria"
  pathname="/programacion"
>
  <Container class="mt-40">
    <ProgramasHero client:load programas={programas} />
  </Container>
</Layout>
