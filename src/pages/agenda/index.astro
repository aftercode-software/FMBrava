---
import { fetchAgenda } from "@/utils/fetchAgenda";
import HeroAgenda from "@/components/agenda/Hero.tsx";
import Container from "@/components/containers/Container.astro";
import Layout from "@/layouts/Layout.astro";

const events = await fetchAgenda();
---

<Layout
  title="Agenda"
  description="Consulta nuestra agenda de eventos"
  pathname="/agenda"
>
  <Container class="mt-30">
    <HeroAgenda events={events} client:load />
  </Container>
</Layout>
