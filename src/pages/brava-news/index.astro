---
import BravaNewsEmpty from "@/components/brava-news/EmptySection";
import NewsSection from "@/components/brava-news/NewsSection.astro";
import Container from "@/components/containers/Container.astro";
import MiniPlayer from "@/components/MiniPlayer.astro";
import Layout from "@/layouts/Layout.astro";
import { fetchBlogs } from "@/utils/fetchBlogs";

const blogs = await fetchBlogs();
---

<Layout
  title="Brava News"
  description="Enterate de lo que suena, lo que pasa y lo que viene en el mundo Brava."
  pathname="/brava-news"
  keywords={[
    "Brava News",
    "noticias FM Brava",
    "últimas noticias Brava Mendoza",
    "reportes de música Mendoza",
    "noticias de espectáculos Mendoza",
    "shows en Mendoza 2025",
    "novedades de música urbana",
    "tendencias musicales Mendoza",
    "estrenos y lanzamientos Brava",
    "agenda de espectáculos Mendoza",
    "noticias de conciertos Mendoza",
    "reportes de radio Brava",
    "actualidad musical Mendoza",
    "lo último en música urbana",
    "eventos culturales Mendoza",
    "novedades FM Brava",
    "noticias de artistas en Mendoza",
    "reportes juveniles Mendoza",
    "Brava espectáculos y música",
    "noticias de la movida mendocina",
  ]}
>
  {
    blogs.length > 0 ? (
      <Container class="mt-30">
        <NewsSection />
      </Container>
    ) : (
      <Container class="mt-30 min-h-screen flex items-center justify-center">
        <BravaNewsEmpty
          title="Brava News"
          description="Pronto tendrás aquí las últimas noticias y novedades de la radio."
        />
      </Container>
    )
  }
  <MiniPlayer />
</Layout>
