---
import Layout from "@/layouts/Layout.astro";
import { fetchBlogs } from "@/utils/fetchBlogs";

// src/pages/brava-news/index.astro

// Fetch de ejemplo: lista completa de posts
const blogs = await fetchBlogs();
---

<Layout>
  <main class="max-w-6xl mx-auto px-4">
    <h1 class="text-5xl font-bold mb-8">Brava News</h1>
    <section class="grid gap-6 grid-cols-2 sm:grid-cols-2 md:grid-cols-3">
      {
        blogs.map((post) => (
          <a
            class="block bg-white rounded-lg shadow hover:shadow-md transition p-6"
            href={`/brava-news/${post.slug}`}
          >
            <h2 class="text-2xl font-semibold mb-2">{post.title}</h2>
            <p class="text-gray-600 line-clamp-3">{post.slug}</p>
          </a>
        ))
      }
    </section>
  </main>
</Layout>
