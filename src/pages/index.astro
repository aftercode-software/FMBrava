---
import React from "../components/React.tsx";
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro";
import Agenda from "../components/agenda/Agenda.tsx";
import Playlists from "../components/Playlists.astro";
import Hero from "../components/home/Hero.astro";
import { fetchAgenda } from "@/utils/fetchAgenda";
const events = await fetchAgenda();
import { fetchProgramas, type Programa } from "../utils/fetchProgramas";
import ProgramacionCarousel from "@/components/home/Programacion";
import BravaNews from "@/components/BravaNews";
import { fetchBlogs } from "@/utils/fetchBlogs";

import Destacadas from "@/components/Destacadas.astro";
import EntreSecciones from "@/components/ads/EntreSecciones.astro";
const programas: Programa[] = await fetchProgramas();
const blogs = await fetchBlogs();
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <Hero />
  <Welcome />
  <React client:load />
  <ProgramacionCarousel programas={programas} client:load />
  <EntreSecciones />
  <BravaNews blogs={blogs} client:load />
  <Destacadas />
  <Agenda events={events} client:load />
  <!-- <Agenda />
  <Playlists /> -->
</Layout>
